<html>
  <head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <% include ./header %>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/modifyEmail" method="post">
              <label for="email"><i class="fa fa-envelope"></i> Email</label>
              <input name="email" id="email" type="text" class="ghost-input" value=<%= email %> required>
              <input type="submit" class="ghost-button" value="modify email">

      </form>
        <form action="/modifyUsername" method="post">
              <label for="username"><i class="fa fa-user"></i>username</label>
              <input name="username" id="username" type="text" class="ghost-input" value=<%= username %> required>
              <input type="submit" class="ghost-button" value="modify username">
          </form>
        <form action="/modifyPassword" method="post">
          <label for="username"><i class="fa fa-key"></i>password</label>
          <input name="password" type="password" class="ghost-input" placeholder="enter a password" required>
          <input name="confirmation" type="password" class="ghost-input" placeholder="re-enter your password" required>
          <input type="submit" class="ghost-button" value="modify password">
        </form>
        <form action="/unregister" method="get">
          <input type="submit" class="ghost-button" value="delete profile">
        </form>
      </fieldset>
    </div>
    <footer>
      <% include ./footer %>
    </footer>
  </body>
</html>
